<h1>Recipe Form</h1>
<%= form_for @recipe do |f|%>
<%= f.label :title%>
<%= f.text_field :title%>
<br>
<h3>Ingredients</h3>
<%= f.fields_for :ingredients do |ingre|%>
  <%= ingre.label :name%>
  <%= ingre.text_field :name%>
  <br>
  <%= ingre.label :quantity%>
  <%= ingre.text_field :quantity%>
  <%end%>
<%= f.submit %>
<%end %>
